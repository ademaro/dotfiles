#!/usr/bin/zsh
if [ -d ~/.zsh ]
then
  echo -e "\e[1;31mКонфиг zsh уже установлен.\e[0m \e[0;31mУдалите ~/.zsh для продолжения установки.\e[0m"
  exit
fi

if [ -d ~/.vim ]
then
  echo -e "\e[1;31mКонфиг vim уже установлен.\e[0m \e[0;31mУдалите ~/.vim для продолжения установки.\e[0m"
  exit
fi

echo -e "\e[1;32mКлонирование конфигов Zsh и Vim...\e[0m"
/usr/bin/env git clone https://github.com/ademaro/dotfiles.git /tmp/dotfiles
mv /tmp/dotfiles/.zsh* ~/
mv /tmp/dotfiles/.vim* ~/

rm -rf /tmp/dotfiles